<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
      <item name="colorPrimary">@color/black</item>
        <!-- Aktif olan buton rengi -->
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Butonların metin rengi -->
        <item name="android:textColorPrimary">@color/yellow</item>
        <!-- Pasif buton rengi -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Navigation bar rengi -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Bottom nav rengi -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <item name="checkboxStyle">@style/CustomCheckBoxStyle</item>
        <item name="floatingActionButtonStyle">@style/CustomFabStyle</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />
    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Checkbox ile ilgili diğer özellikleri belirleyin -->
        <!-- Örneğin, checkbox rengini değiştirmek için buttonTint kullanabilirsiniz -->
        <item name="android:buttonTint">@color/yellow</item>
    </style>

    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Diğer özellikleri belirleyin -->
        <item name="backgroundTint">@color/black</item>
        <item name="tint">@color/yellow</item>

    </style>

</resources>